{
  "name": "rolis/archetype",
  "description": "A modern attribute-based framework for WordPress plugin development",
  "version": "1.0.10",
  "type": "library",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Vitalii Sili",
      "email": "vitaliisili@yahoo.com",
      "homepage": "https://vitaliisili.com"
    }
  ],
  "require": {
    "php": ">=8.2"
  },
  "require-dev": {
    "illuminate/database": "^12.0",
    "illuminate/events": "^12.0",
    "illuminate/container": "^12.0",
    "illuminate/support": "^12.0",
    "ramsey/uuid": "^4.7.6",
    "doctrine/dbal": "^4.0",
    "analog/analog": "^1.0",
    "phpunit/phpunit": "^9.0",
    "squizlabs/php_codesniffer": "^3.7",
    "phpstan/phpstan": "^1.0",
    "wp-coding-standards/wpcs": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Archetype\\": "src/"
    },
    "files": [
      "bootstrap/autoload.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Archetype\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "bundle": [
      "echo 'Bundling dependencies...'",
      "php bundle-dependencies.php"
    ],
    "build": [
      "echo 'Building Archetype framework...'",
      "composer install --dev --optimize-autoloader",
      "@bundle",
      "composer install --no-dev --optimize-autoloader",
      "echo 'Build complete!'"
    ],
    "clean": [
      "echo 'ðŸ§¹ Cleaning build artifacts...'",
      "rm -rf vendor/",
      "rm -rf lib/",
      "echo 'Clean complete!'"
    ],
    "test": "phpunit",
    "phpcs": "phpcs --standard=WordPress",
    "phpcbf": "phpcbf --standard=WordPress",
    "phpstan": "phpstan analyse"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "minimum-stability": "stable",
  "extra": {
    "bundled-dependencies": [
      "illuminate/database",
      "illuminate/support",
      "illuminate/container",
      "illuminate/events",
      "ramsey/uuid",
      "doctrine/dbal",
      "analog/analog"
    ],
    "archetype": {
      "version": "1.0.10",
      "build-date": "2025-06-01"
    }
  }
}